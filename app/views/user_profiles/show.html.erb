<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-10">
		<div class="card">
			<div class="card-body" id="article-list">
				<h3>User Profile</h3>
        <div class="dropdown-divider"></div>
        <div class="m-sm-4">
          <div class="row mb-3">
				    <div class="col-md-6"> 
				      <div class='title'>प्रथम नाम</div>
				      <div class='title_content'>
				        <%= current_user.first_name.present? ? current_user.first_name : 'Not Available' %>
				      </div>
				    </div>
				    <div class="col-md-6"> 
				      <div class='title'>अंतिम नाम</div>
				      <div class='title_content'>
				        <%= current_user.last_name.present? ? current_user.last_name : 'Not Available' %>
				      </div>
				    </div>
				  </div>
				  <div class="row mb-3">
				    <div class="col-md-6"> 
				      <div class='title'>मोबाइल</div>
				      <div class="title_content">
				        <%= @user_profile.mobile.present? ? @user_profile.mobile : 'Not Available' %>
				      </div>
				    </div>
				    <div class="col-md-6"> 
				      <div class='title'>पता</div>
				      <div class="title_content">
				        <%= @user_profile.address.present? ? @user_profile.address : 'Not Available' %>
				      </div>
				    </div>
				  </div>
				  <div class="row mb-3">
				    <div class="col-md-6"> 
				      <div class='title'>नगर</div>
				      <div class="title_content">
				        <%= @user_profile.city.present? ? @user_profile.city : 'Not Available' %>
				      </div>
				    </div>
				    <div class="col-md-6"> 
				      <div class='title'>पिनकोड</div>
				      <div class="title_content">
				        <%= @user_profile.pincode.present? ? @user_profile.pincode : 'Not Available' %>
				      </div>
				    </div>
				  </div>
				  <div class="row mb-3">
				    <div class="col-md-6"> 
				      <div class='title'>राज्य</div>
			        <div class="title_content">
				        <%= @user_profile.state.present? ? @user_profile.state.name : 'Not Available' %>
				      </div>
				    </div>
				    <div class="col-md-6"> 
				      <div class='title'>जन्म दिनांक</div>
				      <div class="title_content">
				        <%= @user_profile.date_of_birth.present? ? @user_profile.date_of_birth : 'Not Available' %>
				      </div>
				    </div>
				  </div>
				  <div class="row mb-3">
				    <div class="col-md-6"> 
				      <div class='title'>फेसबुक प्रोफाइल URL</div>
				      <div class="title_content">
				        <%= @user_profile.facebook_url.present? ? @user_profile.facebook_url: 'Not Available' %>
				      </div>
				    </div>
				    <div class="col-md-6"> 
				      <div class='title'>यूट्यूब प्रोफाइल URL</div>
				      <div class="title_content">
				        <%= @user_profile.youtube_url.present? ? @user_profile.youtube_url : 'Not Available' %>
				      </div>
				    </div>
				  </div>
				  <div class="row mb-3">
				    <div class="col-md-12"> 
				      <div class='title'>जीवन-वृत्तांत</div>
				      <div class="title_content">
				        <%= raw @user_profile.biography %>
				      </div>
				    </div>
				  </div>
        </div>
		  </div>
		</div>
  </div>
  <div class="col-md-1"></div>
</div>

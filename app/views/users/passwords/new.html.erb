  <br>
<div class="ui internally grid">
  <div class="row">
    <div class="five wide column"></div>
    <div class="six wide column">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'ui form' }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <h4 class="ui center aligned top attached header">Forgot your password?</h4>
        <div id="form-segment" class="ui attached segment">
          <div class="field">
            <%= f.label :username %>
            <%= f.email_field :username, autofocus: true, autocomplete: "username" %>
          </div>
        </div>
        <button class="ui bottom attached fluid button primary" type="submit">Send me reset password instructions</button>
        <div id="form-message" class="ui attached message">
          <%= render "users/shared/links" %>
        </div>
      <% end %>
    </div>
    <div class="five wide column"></div>
  </div>
</div>
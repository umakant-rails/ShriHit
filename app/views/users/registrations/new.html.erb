<br>
<div class="ui internally grid">
  <div class="row">
    <div class="five wide column"></div>
    <div class="six wide column">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: 'ui form'}) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <!-- <form id="test" class="ui form" method="POST" action=""> -->
        <h4 class="ui center aligned top attached header">Sign up Form</h4>
        <div id="form-segment" class="ui attached segment">
          <div class="field">
            <%= f.label :username %>
            <%= f.email_field :username, autofocus: true, autocomplete: "username" %>
          </div>
          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>
        <button class="ui bottom attached fluid button primary" type="submit">Register</button>
        <div id="form-message" class="ui attached message">
          <i class="icon help"></i>
          Already registered? Please login <a href="<%= new_user_session_path%>">here</a>.
        </div>
      <% end %>
    </div>
    <div class="five wide column"></div>
  </div>
</div>

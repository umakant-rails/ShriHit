<div class="row">
  <div class="col-lg-7">
    <img src="/assets/radhavallabhlal.jpg" alt="jay radhavallbh lal" class="signup-img"/>
  </div>
  <div class="col-lg-5">
    <div class="row">
      <div class="col-lg-1"></div>
      <div class="col-lg-10">
        <div class="sign-up-container">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="content">
              <h5 class="title text-center">
                <strong>Create Your Account</strong>
              </h5>
              <hr>
              <div class="form-group"><%#binding.break%>
                <div class="col-sm-12 no-padding">
                  <%= render "users/shared/error_messages", resource: resource %>
                </div>
              </div>
              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <%= f.text_field :username, autofocus: true, class: 'form-control', id: 'username', placeholder: 'Username' %>
                <%= f.hidden_field :role_id, value: 3 %>
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <%= f.text_field :email, autofocus: true, class: 'form-control', id: 'email', placeholder: 'Email' %> 
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">
                  Password
                </label>
                <%= f.password_field :password, autocomplete: 'off', class: 'form-control', id: 'password', placeholder: 'Password' %>
              </div>
              <div class="mb-3">
                <label for="confirm_password" class="form-label">
                  Confirm Password
                </label>
                <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', id: 'confirm_password', placeholder: 'Confirm Password'  %>
              </div>
              <p class="spacer">By creating an account, you agree with the <a href="#">Terms</a> and <a href="#">Conditions</a>.</p>
              <div class="row">
                <div class="col-md-12">
                  <%= f.submit "Register", class: "btn btn-info form-control"%>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-md-12">
                  Already registered? Please login <a href="<%= new_user_session_path%>">here</a>.
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-lg-1"></div>
    </div>
  </div>
  
</div>
<div class="row">
  <div class="col-lg-7">
    <img src="/assets/radhavallabhlal.jpg" alt="jay radhavallbh lal" class="signup-img"/>
  </div>
  <div class="col-lg-5">
    <div class="row">
      <div class="col-lg-1"></div>
      <div class="col-lg-10">
        <br/>
        <div class="sign-up-container">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="m-sm-3">
              <h5 class="title text-center">
                <strong>Login To Your Account</strong>
              </h5>
              <hr>
              <div class="form-group">
                <div class="col-sm-12 no-padding">
                  <% if resource.errors.messages.present? %>
                    <div class="input-group alert alert-danger">
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true" style="font-size: 15px;">Ã—</button>
                      <%= get_errors(resource.errors.messages) %>
                    </div>
                  <% end %>
                </div>
              </div>        
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <%= f.text_field :email, autofocus: true, class: 'form-control', id: 'email', placeholder: 'Email' %> 
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">
                  Password
                </label>
                <%= f.password_field :password, autocomplete: 'off', class: 'form-control', id: 'password', placeholder: 'Password' %>
              </div>
              <div class="mb-3">
                <%= f.submit "Log in", class: "form-control"%>
              </div>
              <hr>
              <div class="mb-3">
                If you not registered, please click <a href="<%= new_user_registration_path %>">here</a>.
                <div>
                  <a href="<%= new_user_password_path %>">Forget your password?</a>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-lg-1"></div>
    </div>
  </div>  
</div>
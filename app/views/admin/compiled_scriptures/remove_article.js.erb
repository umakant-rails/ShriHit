$(".alert").hide();
<% if flash[:success].present? %>
	$("#article-list").html("<%= escape_javascript(render partial: 'article', locals: { articles: @articles })%>");
	$("#added-article-list").html("<%= escape_javascript(render partial: 'added_article', locals: {cs_articles: @added_articles })%>");
	$("#successAlert").html("<%= flash[:success] %>");
	$("#successAlert").parent().css("display", "block");
<% elsif flash[:error].present? %>
	$("#errorsAlert").html("<%= flash[:error] %>");
	$("#errorsAlert").parent().css("display", "block");
<% end %>
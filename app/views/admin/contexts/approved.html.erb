<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-body h-400">
		    <span class="col-md-6 text-start article-title text-primary">
		      स्वीकृत प्रसंग सूची 
		    </span>
		    <div class="btn-group fRight">
			  	<a href="javascript:void(0);" class="text-white btn btn-primary">
				  	Approved
				  </a>
			  	<a href="<%= pending_contexts_admin_contexts_path %>" class="text-white btn btn-secondary">
				  	Pending
				  </a>
				</div>
		    <div class="dropdown-divider"></div>
      	<div id="pending_article_list">
	      	<table class="table">
					  <thead class="table-dark">
					    <tr>
					      <th scope="col">S. No.</th>
					      <th scope="col">प्रसंग</th>
					      <th scope="col">योगदानकर्ता</th>
					    </tr>
					  </thead>
					  <tbody>
					    <% if @contexts_approved.present? %>
					      <% @contexts_approved.each_with_index do |context, index| %>
					        <tr>
					        	<td><%= index +1 %></td>
					        	<td><%= context.name %> </td>
					        	<td>
					        		<%= context.user.username %>
					          </td>
					        </tr>
					      <% end %>
					    <% else %>
					      <td colspan="3">
					      	अभी रिकॉर्ड उपलब्ध नहीं है.
					      </td>
					    <% end %>
					  </tbody>
					</table>
	      </div>
	      <div id="paginate-block">
      		<%= paginate @contexts_approved, remote: true %>
      	</div>
			</div>
		</div>
	</div>
</div>

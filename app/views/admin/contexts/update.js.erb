$(".alert").hide();
bootstrap.Modal.getInstance("#updateContextPopup").hide();
<% if @contexts_pending.present? && flash[:success].present? %>
	$("#pending_context_list").html("<%= escape_javascript(render 'context', contexts_pending: @contexts_pending, contexts_approved: @contexts_approved)%>");
	//$("#paginate-block").html("<%= escape_javascript(paginate @contexts_pending, remote: true) %>");
	$("#successAlert").html("<%= flash[:success] %>");
	$("#successAlert").parent().css("display", "block");
<% elsif @contexts_pending.present? && flash[:error].present? %>
	$("#errorsAlert").html("<%= flash[:error] %>");
	$("#errorsAlert").parent().css("display", "block");
<% elsif @contexts_pending.blank? %>
	let url = window.location.href;
  window.location.href = url.substr(0, url.indexOf('?'));
<% end %>
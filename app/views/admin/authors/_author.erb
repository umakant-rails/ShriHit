<table class="table">
  <thead class="table-dark">
    <tr>
      <th scope="col">S. No.</th>
      <th scope="col">नए रचनाकार</th>
      <th scope="col">स्वीकृत/अस्वीकृत</th>
      <th scope="col">विलय करे</th>
      <th scope="col">अपडेट करें</th>
    </tr>
  </thead>
  <tbody>
    <% if authors_pending.present? %>
      <% authors_pending.each_with_index do |author, index| %>
        <tr>
        	<td><%= index +1 %></td>
        	<td data-dashboard-target="authorForApproval" data-vl="<%= author.id %>"><%= author.name %> </td>
        	<td>
        		<input type="button" value="स्वीकृत"  data-index="<%= index %>" data-action="click->dashboard#approveAuthor"  class="btn btn-primary"/>
          	<input type="button" value="अस्वीकृत"  data-index="<%= index %>" data-action="click->dashboard#rejectAuthor" class="btn btn-danger"/>
          </td>
          <td>
          	<% if authors_approved.present? %>
          		<div class="row">
            		<div class="col-md-8">
            			<%= select_tag 'context_id', options_from_collection_for_select(authors_approved, "id", "name"), :prompt => "प्रसंग चुने", class:"form-control", 'data-dashboard-target': 'authorMergeIn' %>
            		</div>
            		<div class="col-md-4">
            			<input type="button" value="विलय करें" data-index="<%= index %>" data-action="click->dashboard#mergeAuthor" class="btn btn-primary"/>
            		</div>
            	</div>
          	<% else %>
          		विलय करने के लिए अभी कोई डाटा उपलब्ध नहीं है.
          	<% end %>
          </td>
          <td>
            <button type="button" class="btn btn-primary" data-index="<%= index %>" data-action="dashboard#setAuthorIndexInPopup" data-bs-toggle="modal" data-bs-target="#updateAuthorPopup">
              अपडेट करें
            </button>
          </td>
        </tr>
      <% end %>
    <% else %>
      <td colspan="3">
      	अभी रिकॉर्ड उपलब्ध नहीं है.
      </td>
    <% end %>
  </tbody>
</table>
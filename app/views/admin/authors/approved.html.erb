<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-body h-400">
		    <span class="col-md-6 text-start article-title text-primary">
		      स्वीकृत रचनाकार सूची 
		    </span>
		    <div class="btn-group fRight">
			  	<a href="javascript:void(0);" class="text-white btn btn-primary">
				  	Approved
				  </a>
			  	<a href="<%= pending_authors_admin_authors_path %>" class="text-white btn btn-secondary">
				  	Pending
				  </a>
				</div>
		    <div class="dropdown-divider"></div>
      	<div id="pending_article_list">
	      	<table class="table">
					  <thead class="table-dark">
					    <tr>
					      <th scope="col">S. No.</th>
					      <th scope="col">नए रचनाकार</th>
					      <th scope="col">सम्प्रदाय</th>
					      <th scope="col">योगदानकर्ता</th>
					    </tr>
					  </thead>
					  <tbody>
					    <% if @authors_approved.present? %>
					      <% @authors_approved.each_with_index do |author, index| %>
					        <tr>
					        	<td><%= index +1 %></td>
					        	<td><%= author.name %> </td>
					        	<td>
					        		<%= author.sampradaya.present? ? author.sampradaya.name : "-"%>
					          </td>
					          <td>
					            <%= author.user.username %>
					          </td>
					        </tr>
					      <% end %>
					    <% else %>
					      <td colspan="3">
					      	अभी रिकॉर्ड उपलब्ध नहीं है.
					      </td>
					    <% end %>
					  </tbody>
					</table>
	      </div>
	      <div id="paginate-block">
      		<%= paginate @authors_approved, remote: true %>
      	</div>
			</div>
		</div>
	</div>
</div>

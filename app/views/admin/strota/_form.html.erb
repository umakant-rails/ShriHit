<%= form_with(model: [:admin, strotum]) do |form| %>
  <div class="row">
    <div class="mb-3 alert alert-danger alert-dismissible fade show" style="display:  <%= strotum.errors.present? ? 'block' : 'none' %>;" role="alert">
      <% strotum.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
      <button type="button" class="btn-close" onclick="$('.alert').hide()" aria-label="Close" style="font-size: 12px; "></button>
    </div>

    <div class='mb-3'>
      <label class='form-label'>
        रसिक वाणी/ग्रन्थ <i class="fa fa-asterisk req-field" aria-hidden="true"></i>
      </label>
      <% strota_types = @strota_types.collect{|st| [st.name, st.id]} %>
      <%= form.select :strota_type_id, options_for_select(strota_types, form.object.strota_type_id), 
        {prompt: 'रसिक ग्रन्थ/वाणी को चुनिये'}, class: 'form-control' %>
    </div>

    <div class='mb-3'>
      <label class='form-label'>
        स्त्रोत/आरती शीर्षक <i class="fa fa-asterisk req-field" aria-hidden="true"></i>
      </label>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class='mb-3'>
      <label class='form-label'>
        टिप्पणी/टैग
      </label>
      <%= form.text_field :keyword, class: 'form-control' %>
    </div>

    <div class='mb-3'>
      <label class='form-label'>
        मूल ग्रन्थ (स्रोत)
      </label>
      <%= form.text_field :source, class: 'form-control' %>
    </div>

    <div class='text-center mt-3 actions'>
      <div class="row">
        <div class="col-md-4">
          <% if form.object.id.blank? %>
            <%= form.submit "स्त्रोत/आरती जोड़े", class: 'btn btn-lg btn-primary form-control' %>
          <% else %>
            <%= form.submit "स्त्रोत/आरती अद्यतन करे", class: 'btn btn-lg btn-primary form-control' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

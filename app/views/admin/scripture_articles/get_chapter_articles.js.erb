<% if params[:scripture_id].present? && @chapters.present? %>
  var options = '<option value="">अध्याय को चुनिये</option>';
  <% @chapters.each do | chapter | %>
    <% if chapter.scripture_articles.present? %>
      options = options + '<option value="<%= chapter.id %>" style="color:red;"><%= chapter.name %></option>'
    <% else %>
      options = options + '<option value="<%= chapter.id %>"><%= chapter.name %></option>'
    <% end %>
  <% end %>
  $("#article_chapters").html(options);
  $("#article-list").html("<%= escape_javascript(render 'article_for_index_update', scripture_articles: [])%>");
<% else %>
  $("#article-list").html("<%= escape_javascript(render 'article_for_index_update', scripture_articles: @articles)%>");
<% end %>
<%= form_with(model: [:admin, panchang]) do |form| %>
  <div class="row">
    <div class="col-md-12">
      <div class="mb-3 alert alert-danger alert-dismissible fade show" style="display:  <%= panchang.errors.present? ? 'block' : 'none' %>;" role="alert">
        <% panchang.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
        <button type="button" class="btn-close" onclick="$('.alert').hide()" aria-label="Close" style="font-size: 12px; "></button>
      </div>
      <div class='mb-3'>
        <div class="row">
          <div class='form-label col-md-2'>
            शीर्षक <i class="fa fa-asterisk req-field" aria-hidden="true"></i>
          </div>
          <div class="col-md-10">
            <%= form.text_field :title, class: 'form-control'%>
          </div>
        </div>
      </div>
      <div class='mb-3'>
        <div class="row">
          <div class='form-label col-md-2'>
            पंचांग का प्रकार <i class="fa fa-asterisk req-field" aria-hidden="true"></i>
          </div>
          <div class="col-md-10">
            <%= form.select :panchang_type, Panchang::TYPE, {prompt: 'पंचांग चयन करे'},
              class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class='mb-3'>
        <div class="row">
          <div class='form-label col-md-2'>
            विक्रम सम्वत <i class="fa fa-asterisk req-field" aria-hidden="true"></i>
          </div>
          <div class="col-md-10">
            <%= form.text_field :vikram_samvat, class: 'form-control'%>
          </div>
        </div>
      </div>
      <div class='mb-3'>
        <div class="row">
          <div class='form-label col-md-2'>
            विवरण
          </div>
          <div class="col-md-10">
            <%= form.text_area :description, class: 'form-control',
              'data-admin-panchang-target': 'desc' %>
          </div>
        </div>
      </div>
      <div class='text-center mt-3 actions'>
        <div class="row">
          <div class="col-md-2"></div>
          <div class="col-md-4">
            <%= form.submit "पंचांग जोड़े",
              class: 'btn btn-lg btn-primary form-control'
              # data: {action: 'click->admin-panchang#formSubmit'}
            %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

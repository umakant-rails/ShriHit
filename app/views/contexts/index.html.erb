<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <div class="card">
      <div class="card-body h-100">
        <span class="col-md-6 text-start article-title text-primary">
          प्रसंग सूची 
        </span>
        <div class="dropdown-divider"></div>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">S. No.</th>
              <th scope="col">प्रसंग नाम</th>
              <th scope="col">स्वीकृत/अस्वीकृत </th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if @contexts.present? %>
              <% @contexts.each_with_index do |context, index| %>
                <%= render partial: 'context', locals: {context: context, index: (index + 1) } %>
              <% end %>
            <% else %>
              <tr>
                <td colspan="3">
                  <center>अभी कोई डाटा उपलब्ध नहीं है</center>
                </td>
              </tr>
            <% end %> 
          </tbody>
        </table>
      </div>
    </div>
    <%= link_to "New context", new_context_path %>
  </div>
  <div class="col-md-1"></div>
</div>
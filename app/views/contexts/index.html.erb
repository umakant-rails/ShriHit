<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body h-100">
        <span class="col-md-6 text-start article-title text-primary">
          प्रसंग सूची 
        </span>
        <div class="dropdown-divider"></div>
        <table class="table">
          <thead class="table-primary">
            <tr>
              <th scope="col">S. No.</th>
              <th scope="col">प्रसंग नाम</th>
              <th scope="col">स्वीकृत/अस्वीकृत </th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if @contexts.present? %>
              <% 
                page = (@contexts.current_page - 1)
                per_page = @contexts.limit_value 
              %>
              <% @contexts.each_with_index do |context, index| %>
                <% ind = (page * per_page) + (index + 1) %>
                <%= render partial: 'context', locals: {context: context, index: ind } %>
              <% end %>
            <% else %>
              <tr>
                <td colspan="3">
                  <center>अभी कोई डाटा उपलब्ध नहीं है</center>
                </td>
              </tr>
            <% end %> 
          </tbody>
        </table>
        <%= paginate @contexts, remote: true %>
        <% if paginate(@contexts).present? %>
          <div class="dropdown-divider"></div>
        <% end %>
        <%= link_to "New context", new_context_path %>
      </div>
    </div>
  </div>
</div>
<!-- Footer -->
<footer class="text-center text-lg-start bg-white text-muted">

  <!-- Section: Links  -->
  <section class="">
    <div class="container text-center text-md-start mt-5 p-4">
      <!-- Grid row -->
      <div class="row mt-3">
        <!-- Grid column -->
        <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4" style="display: flex;justify-content: center;">
          <!-- Content -->
          <a href="<%= root_path %>" class="d-flex align-items-center mb-3 link-dark text-decoration-none">
             <img src="/assets/lalji_icon.jpg" alt="ShriHit" class="footer-icon">
          </a>
        </div>
        <!-- Grid column -->

        <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
        </div>

        <!-- Grid column -->
        <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
          <h4>
            <strong>टैग्स</strong>
          </h4>
          <ul class="nav flex-column">
            <% @tags.limit(5).each do | tag | %>
              <li class="nav-item mb-2">
                <%= link_to tag.name, articles_by_tag_public_tags_path(tag.name), class: "nav-link p-0 text-muted" %>
              </li>
            <% end %>
            <% if @tags.length > 5 %>
              <li class="nav-item mb-2">
                <%= link_to "View more ...", public_tags_path, class: "nav-link p-0 text-muted" %>
              </li>
            <% end %>
          </ul>
        </div>
        <!-- Grid column -->

        <!-- Grid column -->
        <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
          <h4>
            <strong>प्रसंग</strong>

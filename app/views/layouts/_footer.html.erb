            <% end %>
            <% if @authors.length > 5 %>
              <li class="nav-item mb-2">
                <%= link_to "View more ...", public_authors_path, class: "nav-link p-0 text-muted" %>
              </li>
            <% end %>
          </ul>
        </div>

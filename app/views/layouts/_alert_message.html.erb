<% if alert.present? || notice.present? %>
  <div class="alert alert-<%= notice.present? ? 'info' : 'danger'%> alert-dismissible fade show" role="alert">
    <%= alert.present? ? alert : notice %>
    <button type="button" class="btn-close" onclick="$('.alert').hide()" aria-label="Close"></button>
  </div>
<% end %>
<div class="alert alert-danger alert-dismissible fade show" style="display:none;" role="alert" data-controller="application" >
  <div id="errorsAlert" data-application-target="errorsAlert"></div>
  <button type="button" class="btn-close" onclick="$('.alert').hide()" aria-label="Close"></button>
</div>
<div class="alert alert-success alert-dismissible fade show" style="display:none;" role="alert" data-controller="application" >
  <div id="successAlert" data-application-target="successAlert"></div>
  <button type="button" class="btn-close" onclick="$('.alert').hide()" aria-label="Close"></button>
</div>
<%= form_with(model: theme, html: {
  'data-theme-target': 'form', 'data-action': 'theme#submitForm'}) do |form| %>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="mb-3 alert alert-danger alert-dismissible fade show" style="display:  <%= theme.errors.present? ? 'block' : 'none' %>;" role="alert">
        <% theme.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
        <button type="button" class="btn-close" onclick="$('.alert').hide()" aria-label="Close" style="font-size: 12px; "></button>
      </div>

      <div class='mb-3'>
        <label class='form-label'>рдирд╛рдо</label>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      <div class='text-center mt-3 actions'>
        <%= form.submit class: 'btn btn-lg btn-primary form-control' %>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
<% end %>
$(".alert").hide();
<% if flash[:success].present? %>
	$("#theme-article-list").html("<%= escape_javascript(render partial: 'article', :collection => @articles, :as => :article)%>");
	$("#theme-added-article-list").html("<%= escape_javascript(render partial: 'added_article', :collection => @added_articles, :as => :theme_article)%>");
	$("#successAlert").html("<%= flash[:success] %>");
	$("#successAlert").parent().css("display", "block");
<% elsif flash[:error].present? %>
	$("#errorsAlert").html("<%= flash[:error] %>");
	$("#errorsAlert").parent().css("display", "block");
<% end %>
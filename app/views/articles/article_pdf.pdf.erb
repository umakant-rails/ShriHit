<div class="article-body">
  <br/>
  <div class="article-title">
    <div class="title-text">
      रचना : <%= @article.hindi_title %>
    </div>
    <div class="contributer-text">
      (योगदानकर्ता :
        <strong>
          <%= link_to @article.user.username.capitalize, "javascript:void(0);" %>
        </strong>,
        सृजन तिथि :
        <strong class="text-primary">
          <%= link_to @article.created_at.strftime("%B %d, %Y"), "javascript:void(0);" %>
        </strong>,
        रचना प्रकार -
        <strong class="text-primary fnt-sz-14">
          <%= link_to @article.article_type.name, "javascript:void(0);" %>
        </strong>,
        रचनाकार -
        <strong class="text-primary fnt-sz-14">
          <%= link_to @article.author.name, "javascript:void(0);" %>
        </strong>
      )
    </div>
  </div>
  <div class="article-content">
    <%= raw @article.content %>
  </div>
  <br/>
</div>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <span class="col-md-6 text-start article-title text-primary">
            रचना (<%= @article.article_type.name %>) : <%= @article.hindi_title %>
          </span>
          <span class="col-md-6 text-end text-primary writer-mark-txt"> 
            ( योगदानकर्ता : <%= @article.user.username %> )
          </span>
        </div>
        <div class="dropdown-divider"></div>
        <div class="m-sm-4" data-controller= 'article'>
          <div class="article-content">
            <%= raw @article.content %>
          </div>
          <div class="writer-mark-txt text-info">
            ( रचनाकार/लेखक - श्री : <%= @article.writer.name %> जी )
          </div>
        </div>
        <div class="dropdown-divider"></div>
        <div class="row">
          <div class="col-md-2">
            <%= link_to "Edit this article", edit_article_path(@article) %> 
          </div>
          <div class="col-md-2">
            <%= link_to "Back to articles", articles_path %>
          </div>
          <div class="col-md-2" style="margin: -5px 0 0px 0;padding: 0;">
            <%= button_to("Destroy this article", article_path(@article), method: :delete, :class => "btn btn-link") %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-1"></div>
</div>
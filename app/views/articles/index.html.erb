<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <div class="card">
      <div class="card-body h-100">
        <span class="col-md-6 text-start article-title text-primary">
          रचना सूची 
        </span>
        <div class="dropdown-divider"></div>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">S. No.</th>
              <th scope="col">रचना</th>
              <th scope="col">लेखक</th>
              <th scope="col">योगदानकर्ता</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @articles.each_with_index do |article, index| %>
              <%= render partial: 'article', locals: {article: article, index: (index + 1) } %>
            <% end %>
          </tbody>
        </table>
        <%= paginate @articles, remote: true %>
      </div>
    </div>
    <%= link_to "New article", new_article_path %>
  </div>
  <div class="col-md-1"></div>
</div>
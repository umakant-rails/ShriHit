<div class="card">
  <div class="card-body h-100">
    <div class="page-subject-header">
      रचना सूची 
    </div>
    <div class="dropdown-divider"></div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">S. No.</th>
          <th scope="col">रचना</th>
          <th scope="col">लेखक</th>
          <th scope="col">योगदानकर्ता</th>
          <th scope="col">स्वीकृत/अस्वीकृत</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if @articles.present? %>
          <% 
            page = (@articles.current_page - 1)
            per_page = @articles.present? ? @articles.limit_value : 0
          %>
          <% @articles.each_with_index do |article, index| %>
            <% ind = (page * per_page) + (index + 1) %>
            <%= render partial: 'article', locals: {article: article, index: ind } %>
          <% end %>
        <% else %>
          <tr>
            <td colspan="5">
              <center>अभी कोई डाटा उपलब्ध नहीं है</center>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% if paginate(@articles).present? %>
      <%= paginate @articles %>
      <div class="dropdown-divider"></div>
    <% end %>
    <%= link_to "New article", new_article_path %>
  </div>
</div>
<div class="row">
  <div class="card">
    <div class="card-body h-100" id="article-list">
      <div class="page-subject-header">
        <%= params[:context_name] %> ( प्रसंग प्रकार ) : रचना सूची
      </div>
      <div class="dropdown-divider"></div>
      <%
        page = params[:page].blank? ?  0 : (params[:page].to_i - 1)
        page_size = @context_articles.present? ? @context_articles.limit_value : 0
      %>
      <%= render partial: "public/shared/article", locals: {articles: @context_articles, page: page, page_size: page_size} %>
    </div>
  </div>
</div>

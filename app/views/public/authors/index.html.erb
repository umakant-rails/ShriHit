<%#= render partial: 'search_bar'%>
<div class="row">
  <div class="card">
    <div class="card-body h-100" style="min-height: 545px;">
      <span class="row page-subject-header">
        रचनाकार / कवि / भक्त सूची 
      </span>
      <div class="dropdown-divider"></div>
      <table class="table">
        <thead class="table-primary">
          <tr>
            <th scope="col">#</th>
            <th scope="col">नाम    </th>
            <th scope="col">सम्प्रदाय</th>
            <th scope="col">रचनायें</th>
            <th scope="col">योगदानकर्ता</th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <% 
            page = params[:page].blank? ? 0 : (params[:page].to_i - 1)
            page_size = @authors.present? ? @authors.limit_value : 0
          %>
          <% if @authors.present? %>
            <% @authors.each_with_index do | author, index | %>
              <tr>
                <th scope="row"><%= (page * page_size) + (index + 1) %></th>
                <td>
                  <a href="<%= public_author_path(author)%>">
                    <%= author.name %>
                  </a>
                </td>
                <td><%= author.sampradaya.present? ? author.sampradaya.name : '-' %></td>
                <td>रचनाये देखें</td>
                <td>
                  <a href="<%= public_user_profile_path(author.user.id) %>">
                    <%= author.user.username %>
                  </a>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="5">
                There is no data available now.
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @authors, remote: true if @authors.present? %>
    </div>
  </div>
</div>
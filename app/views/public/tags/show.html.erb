<div class="row">
  
  <div class="card">
    <div class="card-body h-100" id="article-list">
      <div class=" page-subject-header">
        <%= params[:tag_name] %> ( टैग्स ) : रचना सूची
      </div>
      <div class="dropdown-divider"></div>
      <% 
        page = params[:page].blank? ?  0 : (params[:page].to_i - 1)
        page_size = @tag_articles.limit_value
      %>
      <%= render partial: "public/shared/article", locals: {articles: @tag_articles, page: page, page_size: page_size} %>
    </div>
  </div>
</div>
<div class="row">
  <%= paginate @tag_articles, remote: true %>
</div>
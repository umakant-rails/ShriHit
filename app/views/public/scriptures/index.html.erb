<div class="card mb-2">
  <div class="page-subject-header mb-3">रसिक वाणी/ग्रन्थ</div>
  <div class="card-body h-100 pb-2" id="article-list">
    <div class="row-fluid">
      <% @scripture_types.each do | type | %>
        <% scriptures = type.scriptures %>
        <% if scriptures.length > 0 %>
          <div class="page-subject-header-blue mb-3"><%= type.name %></div>
          <% scriptures.each_with_index do | scripture, index | %>
            <% if scripture.scripture_type.name == "रसिक वाणी" %>
              <%= link_to public_scripture_path(scripture.name_eng) do %>
                <img class="scripture-img mb-3" src="/assets/<%= string_format(scripture.name_eng) %>.png" width="180px">
              <% end %>
            <% elsif scripture.scripture_type.name == "कथायें" %>
              <%= link_to public_scripture_path(scripture.name_eng) do %>
                <img class="scripture-img mb-3" src="/assets/<%= string_format(scripture.name_eng) %>.png" width="180px">
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="row">

  <center>
    <div class=" mb-4" style="display: inline-block;">
      <% @strota_types.each do | type | %>
        <span class="page-subject-header-lemon text-center ps-5 pe-5 me-2 mb-2" style="display:inline-block; "><%= type.name %></span>
      <% end %>
    </div>
  </center>

  <div class="card mb-2">
    <div class="row page-subject-header-blue   mb-3 text-center">
      <span class="fnt-sz-26">आरती/स्त्रोत</span>
    </div>
    <div class="card-body h-100 pb-2" id="article-list">
      <div class="row"> 
        <div class="col-md-8">
          <% if @strotas.length > 0 %>
            <% @strotas.each_with_index do | strotum | %>
              <div class="row p-2 strota-item-box mb-3">
                <div class="col-md-4 ps-0">
                  <img src="/assets/shrihit.png" class="article-img" alt="Avatar">
                </div>
                <div class="col-md-8">
                  <div class="row mb-2">
                    <div class="col-md-12 article-type-txt">
                      <%= link_to public_strotum_path(strotum.name), class: "txt-chocolate" do %>
                        <%= strotum.name %> (<%= strotum.strota_type.name %>)
                      <% end %>
                    </div>
                  </div>
                  <div class="row pb-3">
                    <%= link_to public_strotum_path(strotum.name) do %>
                      <div class="article-text">
                        <% strotum.strota_articles.each do | article | %>
                          <%= raw article.content %>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
              <hr>  
            <% end %>
          <% end %>
        </div>
        <div class="col-md-4">
          <div class="page-subject-header-lemon">
            रसिक वाणी
          </div>
          <% if @scriptures.present? %>
            <ul class="list-group list-group-flush mb-4">
              <% @scriptures.each_with_index do | scr | %>
                <li class="list-group-item">
                  <i class="fa-solid fa-book me-2 user-icon text-primary"></i>
                  <%= scr.name %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <ul class="list-group list-group-flush mb-4">
              <li class="list-group-item">There is no data available.</li>
            </ul>
          <% end %>
          <div class="page-subject-header-lemon">
            संत चऱित्र
          </div>
          <% if @sants.present? %>
            <ul class="list-group list-group-flush">
              <% @sants.each_with_index do | sant | %>
                <li class="list-group-item">
                  <i class="fa-solid fa-circle-user me-2 user-icon text-primary" ></i> <%= sant.name %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">There is no data available.</li>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
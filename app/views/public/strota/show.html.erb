<div class="card mb-2">
  <div class="page-subject-header-purple mb-3">
    <span class="fnt-sz-26"><%= @strotum.title %> </span>
  </div>
  <div class="card-body h-100 pb-2" id="article-list">
    <div class="row" data-scripture-target="pageParent">
      <div class="col-md-8 fnt-sz-22">
        <div class="article-pad text-center" data-scripture-target="page" >
          <% article_type = nil %>
          <% @articles.each_with_index do | article, index | %>
            <% if @strotum.strota_type.name != "आरती" %>
              <% if article_type.blank? || article_type != article.article_type.name  %>
                <div class="page-subject-header-green text-center fnt-b mb-3 "> 
                  <%= article.article_type.name %>
                </div>
                <% article_type = article.article_type.name %>
              <% end %>
            <% end %>

            <div class="mb-1 fnt-b <%= (index % 2) == 0 ? "text-primary" : "text-info" %>">
              <% if @strotum.strota_type.name == "आरती" %>
                <%= raw get_strota_content(article.content, nil) %>
              <% else %>
                <%= raw get_strota_content(article.content, index) %>
              <% end %>
            </div>  
            <div class="mb-3 fnt-sz-18">
              <%= raw article.interpretation %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="page-subject-header-lemon">
          सम्बन्धित बिषय
        </div>
        <% if @strota.present? %>
          <ul class="list-group list-group-flush mb-4">
            <% @strota.each_with_index do | strotum, index | %>
              <%= link_to public_strotum_path(strotum.title) do %>
                <li class="list-group-item">
                  <i class="fa-solid fa-book me-2 user-icon text-primary"></i>
                  <%= strotum.title %>
                </li>
              <% end %>
            <% end %>
          </ul>
        <% else %>
          There is no more data available now.
        <% end %>
      </div>
    </div>
  </div>
</div>
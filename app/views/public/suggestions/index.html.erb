<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <div class="card">
      <div>
        <%= link_to(new_public_suggestion_path, class: "btn btn-primary fRight") do %>
          नया सुझाव <i class="fa fa-plus" aria-hidden="true"></i>
        <% end %>
      </div>
      <div class="card-body">
        <div class="card article-type-title">
          सुझाव सूची
        </div>
        <div class="dropdown-divider"></div>
        <div class="suggestion-container" data-controller= ''>
          <%if @suggestions.present? %>
            <%@suggestions.each_with_index do | suggestion, ind |%>
              <div class="suggestion-item">
                <%= ind + 1 %>. <%= link_to suggestion.title, public_suggestion_path(suggestion), class: "" %>
                <div class="row sgstion-user-index">
                  <span class="sgstion-user">
                    username: <span class="username"><strong><%= suggestion.username %></strong></span>
                  </span>
                </div>
              </div>
              <div class="suggestion-item">
                <%= ind + 1 %>. <%= link_to suggestion.title, public_suggestion_path(suggestion), class: "" %>
                <div class="row sgstion-user-index">
                  <span class="sgstion-user">
                    username: <span class="username"><strong><%= suggestion.username %></strong></span>
                  </span>
                </div>
              </div>
            <% end %>
          <% else %>
            कोई सुझाव उपलब्ध नहीं है 
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-1"></div>
</div>
<div class="row bg-primary text-white">
  <span class="col-md-6 text-start article-title">
    <a href="<%= public_article_path (article) %>" class="text-white">
      रचना (<%= article.article_type.name %>) : <%= article.hindi_title %>
    </a>
  </span>
  <span class="col-md-6 text-end author-mark-txt"> 
    <a href="<%= public_user_profile_path(article.user.id) %>" class="text-white">
      ( योगदानकर्ता : <%= article.user.username %> )
    </a>
  </span>
</div>
<div class="dropdown-divider"></div>
<div class="row">
  <div class="m-sm-4" data-controller= 'article'>
    <div class="article-content">
      <%= raw article.content %>
    </div>
    <div class="author-mark-txt text-info">
      <a href="<%= public_author_path(article.author.id) %>">
        <%if article.author.name != "अज्ञात"  %>
          ( रचनाकार/लेखक - श्री <%= article.author.name %> जी )
        <% else %>
          ( रचनाकार/लेखक - <%= article.author.name %> )
        <% end %>
      </a>
    </div>
  </div>
</div>
<hr>

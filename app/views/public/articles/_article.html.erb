<div class="row">
  <span class="col-md-6 text-start article-title text-primary">
    <a href="<%= public_article_path (article) %>">
      रचना (<%= article.article_type.name %>) : <%= article.hindi_title %>
    </a>
  </span>
  <span class="col-md-6 text-end text-primary author-mark-txt"> 
    <a href="<%= public_user_profile_path(article.user.id) %>">
      ( योगदानकर्ता : <%= article.user.username.capitalize %> )
    </a> |
    <a href="<%= export_pdf_public_article_path(article.id, format: :pdf) %>" target="_blank" >
      <i class="fa-solid fa-file-export"></i>
    </a>
  </span>
</div>
<div class="dropdown-divider"></div>
<div class="row">
  <div class="m-sm-4" data-controller= 'article'>
    <div class="article-content">
      <%= raw article.content %>
    </div>
    <div class="author-mark-txt text-info">
      <a href="<%= public_author_path(article.author.id) %>">
        ( रचनाकार/लेखक - श्री <%= article.author.name %> जी )
      </a>
    </div>
  </div>
</div>
<hr>

<table class="table">
  <thead class="table-primary">
    <tr>
      <th scope="col">#</th>
      <th scope="col">रचनायें</th>
    </tr>
  </thead>
  <tbody>
    <% if articles.present? %>
      <% articles.each_with_index do | article, index | %>
        <tr>
          <th scope="row"><%= (page * page_size) + (index + 1) %></th>
          <td>
            <a href="<%= public_article_path(article)%>">
              <%= article.hindi_title %>
            </a>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="2">
          There is no data available now.
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
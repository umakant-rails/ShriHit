<div class="row mb-3">
	<div class="col-md-12">
		<div class="article-header-yellow">नवीनतम रचनायें</div>
	</div>
</div>
<div class="row">
	<% @articles && @articles.each do | article | %>
		<div class="col-md-4">
			<a href="<%= public_article_path(article) %>">
			<div class="card">
			  <img src="/assets/shriji_charan.png" class="card-img-top" alt="Shrihit" style="border-bottom:2px solid #D3D3D3;">
			  <div class="card-body">
			    <div class="card-title article-header-yellow">
			    	<%= article.hindi_title %>
			    </div>
			    <p class="card-text">
			    	<% txt = Nokogiri::HTML(article.content).text %>
				   	<%=truncate(txt, length: 150)  %>
				  </p>
				  <div class="dropdown-divider"></div>
				  <div class="contributer-text">
            ( 
              सृजन तिथि : 
              <strong class="text-primary">
                <%= link_to article.created_at.strftime("%b %d, %Y"), "javascript:void(0);" %>
              </strong>,
              रचना प्रकार - 
              <strong class="text-primary fnt-sz-14">
                <%= link_to article.article_type.name, articles_by_type_public_article_types_path(article.article_type.name) %>
              </strong>,
              रचनाकार - 
              <strong class="text-primary fnt-sz-14">
                <%= link_to article.author.name, public_author_path(article.author.id) %>
              </strong>
            )
          </div>
          <div class="dropdown-divider mb-4"></div>
			    <a href="<%= public_article_path(article) %>" class="btn btn-warning">Go somewhere</a>
			  </div>
			</div>
		</a>
		</div>
	<% end %>
</div>

<% content_for :head do %>
  <%#= javascript_import_module_tag "custom/welcome-custom" %>
<% end %>
<%= form_with(model: saint_bio_event) do |form| %>
  <% if saint_bio_event.errors.any? %>
    <div class="mb-3 alert alert-danger alert-dismissible fade show" style="display:  <%= saint_bio_event.errors.present? ? 'block' : 'none' %>;" role="alert">
      <% saint_bio_event.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
      <button type="button" class="btn-close" onclick="$('.alert').hide()" aria-label="Close" style="font-size: 12px; "></button>
    </div>
  <% end %>

  <div class='mb-3'>
    <label class='form-label'>
      संत का नाम <i class="fa fa-asterisk req-field" aria-hidden="true"></i>
    </label>
    <%#= form.number_field :author_id, class: 'form-control' %>
    <%= form.select :author_id, options_for_select(sants, selected: saint_bio_event.author_id), {:prompt => 'संत का नाम चुने'},
      class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <label class='form-label'>
      शीर्षक
    </label>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <label class='form-label'>
      जीवन वृतांत <i class="fa fa-asterisk req-field" aria-hidden="true"></i>
    </label>
    <%= form.text_area :event, class: 'tinymce' %>
  </div>

  <div class='text-center mt-3 actions'>
    <div class="row">
      <div class="col-md-4">
        <% if form.object.id.blank? %>
          <%= form.submit "जीवन वृतांत जोड़े", class: 'btn btn-lg btn-primary form-control' %>
        <% else %>
          <%= form.submit "जीवन वृतांत अद्यतन करे", class: 'btn btn-lg btn-primary form-control' %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

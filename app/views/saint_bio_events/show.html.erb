<p style="color: green"><%= notice %></p>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
        <div class="col-md-12 page-subject-header">
          जीवन वृतांत: <%= @saint_bio_event.title %>
          <div class="contributer-text">
            (योगदानकर्ता :
              <strong>
                <%= link_to @saint_bio_event.user.username.capitalize, public_user_profile_path(@saint_bio_event.user.id) %>
              </strong>,
              सृजन तिथि :
              <strong class="text-primary">
                <%= link_to @saint_bio_event.created_at.strftime("%B %d, %Y"), "javascript:void(0);" %>
              </strong>,
              सम्बंधित संत -
              <strong class="text-primary fnt-sz-14">
                <%= link_to @saint_bio_event.author.name, public_author_path(@saint_bio_event.author.id) %>
              </strong>
            )
          </div>
        </div>
        <div class="dropdown-divider"></div>
        <div class="m-sm-4 row">
          <div class="col-md-12 offset-0">
            <%= raw @saint_bio_event.event %>
          </div>
        </div>
        <div class="divider-bdr"></div>
        <div>
          <%= link_to "संत जीवन वृतांत अद्यतन करे ", edit_saint_bio_event_path(@saint_bio_event), class: "btn btn-primary" %>
          <%= link_to "संत जीवन वृतांत सूची", saint_bio_events_path, class: "btn btn-primary" %>
          <div style="display:inline-block;">
            <%= button_to "संत जीवन वृतांत डिलीट करे", @saint_bio_event, method: :delete, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

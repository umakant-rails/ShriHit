<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body h-100">
        <span class="col-md-6 text-start article-title text-primary">
          रचनाकार/कवि/भक्त सूची  
        </span>
        <div class="dropdown-divider"></div>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">S. No.</th>
              <th scope="col">रचनाकार/कवि/भक्त</th>
              <th scope="col">सम्प्रदाय</th>
              <th scope="col">जन्म तिथि</th>
              <th scope="col">मृत्यु तिथि</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if @authors.present? %>
              <% @authors.each_with_index do |author, index| %>
                <%= render partial: 'author', locals: {author: author, index: (index + 1) } %>
              <% end %>
            <% else %>
              <tr>
                <th colspan="6">
                  <center>There is no data.</center>
                </th>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @authors, remote: true %>
        <% if paginate(@authors).present? %>
          <div class="dropdown-divider"></div>
        <% end %>
        <%= link_to "New Author", new_author_path %>
      </div>
    </div>
  </div>
</div>
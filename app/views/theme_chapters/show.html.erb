<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body h-100">
        <div class="col-md-12 page-subject-header">
          अध्याय विवरण
        </div>
        <div class="dropdown-divider"></div>
        <div class="row mb-3">
          <div class="col-md-12">
            <div class='profile-title'>अध्याय का नाम</div>
            <div class='profile-content'>
              <%= @theme_chapter.name %>
            </div>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-md-12">
            <div class='profile-title'>उत्सव का नाम</div>
            <div class='profile-content'>
              <%= @theme_chapter.theme.name %>
            </div>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-md-12">
            <div class='profile-title'>योगदानकर्ता का नाम</div>
            <div class='profile-content'>
              <%= @theme_chapter.user.username %>
            </div>
          </div>
        </div>
        <div class="dropdown-divider"></div>
        <div class="">
          <%= link_to "उत्सव अध्याय अद्यतन करे ", edit_theme_chapter_path(@theme_chapter) %> |
          <%= link_to "उत्सव अध्याय सूची देखे", theme_chapters_path %> |
          <%= button_to("उत्सव अध्याय डिलीट करे", theme_chapter_path(@theme_chapter), method: :delete, :class => "btn btn-link ps-0", form_class: 'btn ps-0 pe-0') %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
